---
import DarkModeButton from "./DarkModeButton.svelte";
import { Image } from "astro:assets";

import LogoDarkMode from "../assets/logoVectorLight.svg";
import LogoLightMode from "../assets/logoVectorDark.svg";
---

<nav class="font-display flex flex-col h-[8dvh] md:flex-row items-center justify-between  z-50 xl:px-10 px-2 sm:px-6 lg:px-10 sticky top-0 border-b border-gray-300 dark:border-zinc-900 dark:bg-zinc-950 bg-gray-100 py-2">
  <a href="/" class="flex items-center">
    <Image
      src={LogoLightMode}
      alt="Logo"
      class="w-8 h-8 block dark:hidden mx-4"
    />
    <Image
      src={LogoDarkMode}
      alt="Logo"
      class="w-8 h-8 hidden dark:block mx-4"
    />
    <h1 class="text-2xl">ravixUI</h1>
  </a>
  <div class="items-center h-full justify-center ">
    <div class="w-full h-full inline-flex mx-3 justify-end">
      
      <div class="inline-flex items-center h-full space-x-4">
        
        <a href="/" class="p-2 text-base md:text-xl hover:text-blue-400"
          >About</a
        >
        <a href="/components/gettingstarted" class= "p-2 text-base md:text-xl hover:text-blue-400"
          >Docs</a
        >
        <a href="/" class= "p-2 text-base md:text-xl hover:text-blue-400"
        >Pricing</a
      >             
        <DarkModeButton client:load />
      </div>
    </div>
  </div>
</nav>
