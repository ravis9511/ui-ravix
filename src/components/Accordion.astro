---
interface Props {
  data: Array<{
    title: string;
    content: string;
    name?: string;
  }>;
}
const { data } = Astro.props;
---

<div
  class="not-prose mb-12 mt-6 max-w-3xl divide-y divide-gray-400 rounded-lg border border-gray-400 shadow-md dark:divide-zinc-800 dark:border-zinc-800 dark:shadow-none"
>
  {
    data.map((item) => (
      <details class="group" open={false} name={item.name}>
        <summary
          class="flex cursor-pointer items-center justify-between rounded-lg bg-gray-50 px-4 py-4 text-zinc-900 outline-gray-600 focus:outline-2 group-open:bg-gray-200 dark:bg-zinc-950 dark:text-zinc-300 dark:outline-zinc-500 dark:group-open:bg-zinc-900"
          tabindex="0"
        >
          <span class="text-lg font-semibold">{item.title}</span>
          <svg
            class="h-5 w-5 shrink-0 transition duration-300 group-open:-rotate-180"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"
            />
          </svg>
        </summary>

        <div class="px-6 pb-5 pt-3 text-start text-sm md:text-base">
          {item.content}
        </div>
      </details>
    ))
  }
</div>
