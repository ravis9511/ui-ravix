---
interface Props {
  description: string;
  listItems: string[];
}

const { description, listItems } = Astro.props as Props;

/**  Usage in an Astro component:
    ---
    import Olist from './Ulist.astro';
    const list = ['Item 1', 'Item 2', 'Item 3'];
    const description = 'Your description here';
    ---
     <Olist description={description} listItems={list} />
**/
---


<div class="text-zinc-900 dark:text-gray-100 text-base md:text-lg">
  <p class="mx-4 mb-6 max-w-2xl text-md leading-normal text-start w-full">
    {description}
  </p>
  <ol
    class="mx-10 list-decimal list-outside max-w-2xl space-y-2 mb-6 marker:text-zinc-700 dark:marker:text-gray-100">
    {
      listItems.map((item) => (
        <li>
          <p class="ml-2">{item}</p>
        </li>
      ))
    }
  </ol>
</div>
