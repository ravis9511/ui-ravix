---
interface Props {
  entryMap: Array<{
    slug: string;
    title: string;
    order: number;
  }>;
  currentSlug: string;
}
const { entryMap, currentSlug } = Astro.props;
---

<nav class="flex flex-col text-lg text-start my-8 ">
  <div class="flex flex-col mb-12 font-display">
    <ul class="space-y-4 text-xl">
      {
        entryMap.map((links) => (
          <li>
            <a
              href={links.slug}
              class={`${
                currentSlug === links.slug
                  ? "dark:text-indigo-400 text-indigo-700 font-bold"
                  : ""
              }`}
            >
              {links.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
