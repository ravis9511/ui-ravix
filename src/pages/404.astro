---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404">
  <div class="flex h-[92dvh] flex-col items-center justify-center">
    <h1 class="text-9xl font-bold text-indigo-600">404</h1>
    <p class="mt-4 text-2xl text-gray-600 dark:text-gray-400">
      Oops! Page not found.
    </p>
    <p class="mt-2 text-gray-500 dark:text-gray-300">
      The page you are looking for does not exist.
    </p>
    <a
      href="/"
      class="mt-8 rounded-md bg-indigo-600 px-6 py-3 text-white transition duration-300 hover:bg-indigo-700"
    >
      Go back home
    </a>
  </div>
</Layout>
