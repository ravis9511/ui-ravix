<script is:inline>
  
  function menuActionJS() {
    
    const menuToggle = document.querySelector(
      "#menu-toggle-js"
    );
    const menu = document.querySelector(
      "#menu-js"
    );
    
    menuToggle.addEventListener("click", function () {
      
      if (menu) {
        
        menu.getAttribute("aria-expanded") === "true"
          ? menu.setAttribute("aria-expanded", "false")
          : menu.setAttribute("aria-expanded", "true");
        document.addEventListener("click", closeMenuJS);
        
      }
    });
  }

  function closeMenuJS(e) {
    
    const menuToggle = document.querySelector(
      "#menu-toggle-js"
    );
    const menu = document.querySelector(
      "#menu-js"
    );
    if (!menuToggle?.contains(e.target )) {
      
      if (menu?.getAttribute("aria-expanded") === "true") {
        menu.setAttribute("aria-expanded", "false");
        document.removeEventListener("click", closeMenuJS);
      }
    }
  }
  
  document.addEventListener("astro:page-load", menuActionJS);
  document.addEventListener("astro:before-swap", menuActionJS);
  
</script>
